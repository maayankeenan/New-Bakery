@{
    ViewBag.Title = "Login";
}

    <div class="col-md-offset-3 col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading"><b>@ViewBag.Title</b></div>
            <div class="panel-body">

                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <h5 class="col-md-offset-2">@ViewBag.Message</h5>
                }

                <form class="form-horizontal" role="form" action="Login" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="id"><b>ID</b></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="id" name="id">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="password"><b>Password</b></label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Login</button>
                        </div>
                    </div>
                </form>

                <br />

                <h2>New User?</h2>
                <span class="detail_button">
                    @Html.ActionLink("Register Now!", "Register", "Home")
                </span>

            </div>
        </div>
    </div>


