@model Repository.Models.Pastery

@{
    ViewBag.Title = "Create New Product";
}

<h3>New Products</h3>
<div class="panel">
    <div class="panel-body">
        @if (Session["IsAdmin"] == null || !(bool)Session["IsAdmin"])
        {
            <div>
                <h2>You are not authorized to view this page</h2>
            </div>
        }
        else
        {
            <div class="pull-left" style="width:70%">
                <form method="post" action="/Pastery/Create">
                    
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" type="text" id="Name" name="Name" />
                    </div>

                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" type="text" id="Price" name="Price" />
                    </div>

                    <div class="form-group">
                        <label>Type</label>
                        <input class="form-control" type="text" id="Type" name="Type" />
                    </div>

                    <div class="cform-group">
                        <label>
                            @Html.EditorFor(model => Model.Vegan)
                            Vegan
                        </label>
                    </div>

                    <div class="checkbox">
                        <label>
                            @Html.EditorFor(model => Model.GlotanFree)
                            Glotan Free
                        </label>
                    </div>

                    <div class="form-group">
                        <label>Comments</label>
                        <textarea class="form-control" id="Comments" name="Comments"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Image Url</label>
                        <input type="url" class="form-control" id="ImageLink" name="ImageLink" style="margin-top:10px"/>
                    </div>

                    <div>
                        <input type="submit" class="btn btn-primary" value="Save" />
                    </div>
                </form>
            </div>
        }
    </div>
</div>
